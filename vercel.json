{
  "buildCommand": "next build",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "pages/api/**": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NEXT_PUBLIC_GITHUB_REPO_OWNER": {
      "description": "GitHub repository owner"
    },
    "NEXT_PUBLIC_GITHUB_REPO_NAME": {
      "description": "GitHub repository name"
    },
    "GITHUB_TOKEN": {
      "description": "GitHub Personal Access Token"
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "API URL for frontend"
    }
  },
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  "trailingSlash": false,
  "cleanUrls": true,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ]
}